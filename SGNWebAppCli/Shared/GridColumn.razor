<th>
    <div class="col-10 row text-center">
        <b class="align-content-center">@ColumnTitle</b>
        @if (AllowFiltering == true)
        {
            <input class="form-control" style="width: 120px;height:25px;position:absolute;left:80%;"
                   placeholder="wyszukaj..." @oninput="OnSearchTextChange" />
        }
    </div>
</th>

@code {
    [Parameter] public string ColumnTitle { get; set; }
    [Parameter] public bool AllowFiltering { get; set; } = false;
    [Parameter] public EventCallback<ChangeEventArgs> OnSearchTextChange { get; set; }

}
